<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".Datosusuario">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="412dp"
        android:layout_height="148dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_codigo"
            android:layout_width="392dp"
            android:layout_height="43dp"
            android:background="#43A047"
            android:gravity="center"
            android:hint="@string/cargandocodigo"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:ignore="TextContrastCheck" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="395dp"
            android:layout_height="63dp"
            android:background="#00897B"
            android:backgroundTint="#00897B"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_apellidos"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:gravity="center"
                android:hint="@string/cargandonombres"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:ignore="TextContrastCheck" />

            <Button
                android:id="@+id/btn_logout"
                android:layout_width="51dp"
                android:layout_height="match_parent"
                android:width="200dp"
                android:background="#00FFFFFF"
                android:minHeight="48dp"
                android:text="@string/logoutascii"
                android:textSize="29sp"
                android:visibility="visible" />

        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="411dp"
        android:layout_height="590dp"
        android:padding="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/lyt_horasextra"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="67dp"
                    android:layout_height="wrap_content"
                    android:text="@string/TV_HORAEXTRA"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/tv_totalextras"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="@string/cargando_horasextras"

                    tools:ignore="TextContrastCheck" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="77dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/TV_HORAEXTRAPAGADAS"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/tv_horascompensadas"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="@string/cargando_horasextras"
                    tools:ignore="TextContrastCheck" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lyt_htotal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/TV_HORASTOTALES"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/tv_horastotales"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/cargando_horasextras"
                    tools:ignore="TextContrastCheck" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/tv_registrarsalida"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editTextDate"
                    android:layout_width="0dp"
                    android:layout_height="58dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="@string/formatofechahint"
                    android:inputType="date"
                    android:textAlignment="center"
                    tools:ignore="TextContrastCheck"
                    android:importantForAutofill="no" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lyt_ingresarhoras"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/txt_horasalida"
                    android:layout_width="100dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="@string/INGRESEHORA"
                    android:importantForAutofill="no"
                    android:inputType="number"
                    tools:ignore="TextContrastCheck" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="21dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/separadorhoras"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/txt_minutosalida"
                    android:layout_width="106dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="@string/INGRESEMINUTOS"
                    android:importantForAutofill="no"
                    android:inputType="number"
                    tools:ignore="TextContrastCheck" />

                <Switch
                    android:id="@+id/switch_noche"
                    android:layout_width="98dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:foregroundGravity="center"
                    android:gravity="center"
                    android:minHeight="48dp"
                    android:text="@string/turnonoche"
                    android:textSize="11sp" />

                <Button
                    android:id="@+id/btn_agregarHora"
                    android:layout_width="89dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#00FFFFFF"
                    android:backgroundTint="#A9555555"
                    android:backgroundTintMode="add"
                    android:hapticFeedbackEnabled="true"
                    android:text="@string/asciiconfirmacion"
                    android:textColor="#00897B"
                    android:textSize="24sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>